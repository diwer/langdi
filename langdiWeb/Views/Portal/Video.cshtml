    <style>
        body {
            background: #fff;
        }

        h1 {
            color: #000;
            font-family: Arial, "微软雅黑";
            color: #000;
            font-size: 1.5em;
            line-height: 1.2em;
            margin-top: 0.5em;
        }

        p {
            color: #9c9c9c;
            font-size: 1em;
            line-height: 1.5em;
        }

        .shadow:hover {
            box-shadow: 5px 5px 5px #9c9c9c;
        }

        .banner #group .btn {
            font-size: 1.5em;
            background: transparent;
            border: 1px solid #0471BB;
            color: #fff;
            padding: 0.4em 2em;
            opacity: 0.7;
        }

        .banner #group3 .btn {
            font-size: 0.5em;
            background: transparent;
            border: 1px solid #0471BB;
            color: #fff;
            padding: 0.4em 2em;
            opacity: 0.7;
        }

        .banner #group .btn:hover {
            background: #0471BB;
            opacity: 1;
            color: #ffffff;
        }

        #group1 .btn {
            font-size: 24px;
            background: transparent;
            border: 1px solid #0471BB;
            color: #0471BB;
        }

            #group1 .btn:hover {
                background: #0471BB;
                color: #ffffff;
            }

        .btn-toolbar .btn {
            color: #0471BB;
            border: 1px solid #0471BB;
            background: transparent;
        }

            .btn-toolbar .btn:hover {
                background: #0471BB;
                color: #fff;
            }

        .shadow {
            padding-left: 0;
        }
        /* .shadow .col-md-4{
              padding-left: 0;
            }*/

        .container {
            margin-right: auto;
            margin-left: auto;
            padding-left: 0px;
            padding-right: 0px;
        }

        .aaa {
            display: none;
            position: absolute;
            bottom: 30px;
            left: 50%;
        }

        @@media(max-width: 768px) {
            .aaa {
                display: none;
                position: absolute;
            }
        }

        .bbb {
            position: relative;
        }

            .bbb:hover .aaa {
                display: block;
            }

        .vendor {
            width: 100%;
            position: relative;
            padding: 0;
        }

        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            padding-top: 30px;
            height: 0;
            overflow: hidden;
        }

            .video-container iframe {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
    </style>
</head>

<body data-spy="scroll" data-target="#myScrollspy">
    <!--[if lt IE 10]>
    <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="header">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example-navbar-collapse">
                    <span class="sr-only">切换导航</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img style="margin-top:-10px" src="/images/logo1.png"></a>
            </div>
            <div class="collapse navbar-collapse" id="example-navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/index1.html">首页</a></li>
                    <li><a href="/productFunction.html">产品功能</a></li>
                    <li><a href="/productApplication.html">解决方案</a></li>
                    <li class="active"><a href="/portal/productlist">产品动态</a></li>
                    <li><a href="/joinus.html">招贤纳士</a></li>
                    <li><a href="/address.html">联系我们</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="banner">
        <div>
            <img class="img-responsive hidden-xs" src="/images/productTrends.png" />
            <img class="img-responsive visible-xs" src="/images/productTrends-phone.png" />
        </div>
        <div class="text text-center hidden-xs hidden-sm" style="position: absolute; margin-top: -16%;left: 0;right:0">
            <h1 class="mt1em" style="color:#fff;font-size:3em">产品动态</h1>
            <p style="color:#fff;font-size:1.5em;opacity: 0.7">让您们更好地了解我们在做什么……</p>
            <div class="btn-group mt1em" role="group" id="group">
                @Html.Action("catelist", new { id = -1 })
            </div>
        </div>
        <div class="text text-center visible-xs" style="position: absolute;left: 0;right:0;top:10%;">
            <h3>产品动态</h3>
            <p style="color:#fff;opacity: 0.7">让您们更好地了解我们在做什么……</p>
            <div class="btn-group mt1em" role="group" id="group3">
                @Html.Action("catelist", new { id = -1 })
            </div>
        </div>
    </div>
    <div class="content clearfloat bgcolor-gray pb1em">
        <div class="container">
            <div class="video">
                <div class="row mt2em">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6  mt1em">
                            <div class="vendor">
                                <div class="video-container">
                                    @Html.Raw(item.Code)
                                </div>
                                <h2><a href="#" style="color:black">@item.Title</a></h2>
                                <div class="pointAndjudge clearfix">
                                    <span class="point">朗迪锋科技</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            @Html.Pager(Model, new PagerOptions() { AutoHide = false, MaxPageIndex = 5, ContainerTagName = "ul", CssClass = "pagination mypage", PagerItemWrapperFormatString = "<li>{0}</li>", CurrentPagerItemWrapperFormatString = "<li class='active'><a href='#'>{0}</a></li>", PageIndexParameterName = "PageIndex" })
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <div class="row">
                <ul class="bottomNav mt1em">
                    <li><a href="productFunction.html">产品功能&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li><a href="productApplication.html">解决方案&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li><a href="product1.html">产品动态&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li><a href="joinus.html">招贤纳士&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li><a href="address.html">联系我们&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li>
                        <div class="bbb">
                            <a href="#" class="bds_weixin" data-cmd="weixin" title="分享到微信">微信公众号</a>
                            <div class="aaa hidden-xs"><img src="images/erwemas.png" alt="" /></div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="foot-detail text-center">
                <p style="margin-bottom:1em;opacity: 0.5;color:#fff">版权所有：北京朗迪锋科技有限公司京ICP备13044728
                <p>
            </div>
        </div>
    </div>
