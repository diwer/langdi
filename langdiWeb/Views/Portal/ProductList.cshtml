@model langdiWeb.Models.ProductViewModel

@{
    ViewBag.Title = "新闻列表";
    Layout = null;
}
<!doctype html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <title>产品动态</title>
    <meta name="Description" content="">
    <meta name="viewport" content="width=device-width">
    <link rel="shortcut icon" href="../../favicon.ico" type="image/x-icon" />
    <!-- build:css(.) styles/vendor.css -->
    <!-- bower:css -->
    <!-- endbower -->
    <!-- endbuild -->
    <!-- build:css(.tmp) styles/main.css -->
    <link rel="stylesheet" href="/css/main.css">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!-- endbuild -->
    <!-- build:js scripts/vendor/modernizr.js -->
    <script src="/bower_components/modernizr/modernizr.js"></script>
    <!-- endbuild -->
    <script type="text/javascript">
        $(document).ready(function () {
            $("#myNav").affix({
                offset: {
                    top: 125
                }
            });
        });
    </script>
    <style>
        body {
            background: #fff;
        }

        h1 {
            color: #000;
            font-family: Arial, "微软雅黑";
            color: #000;
            font-size: 3em;
            margin-top: 0.5em;
        }

        h2 {
            color: #000;
            font-size: 1.2em;
            margin-top: 0.5em;
        }

        p {
            color: #9c9c9c;
            font-size: 1em;
            line-height: 1.5em;
        }

        .shadow:hover {
            box-shadow: 5px 5px 5px #9c9c9c;
        }

        .banner #group .btn {
            font-size: 1.5em;
            background: transparent;
            border: 1px solid #0471BB;
            color: #fff;
            padding: 0.4em 2em;
            opacity: 0.7;
        }

        .banner #group1 .btn {
            font-size: 0.5em;
        }

        .banner #group .btn:hover {
            background: #0471BB;
            opacity: 1;
            color: #ffffff;
        }

        #group1 .btn {
            font-size: 24px;
            background: transparent;
            border: 1px solid #0471BB;
            color: #0471BB;
        }

            #group1 .btn:hover {
                background: #0471BB;
                color: #ffffff;
            }

        .btn-toolbar .btn {
            color: #0471BB;
            border: 1px solid #0471BB;
            background: transparent;
        }

            .btn-toolbar .btn:hover {
                background: #0471BB;
                color: #fff;
            }

        .shadow {
            padding-left: 0;
        }
        /* .shadow .col-md-4{
          padding-left: 0;
        }*/

        .container {
            margin-right: auto;
            margin-left: auto;
            padding-left: 0px;
            padding-right: 0px;
        }
    </style>
</head>
<body data-spy="scroll" data-target="#myScrollspy">

    <!--[if lt IE 10]>
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="header">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target="#example-navbar-collapse">
                    <span class="sr-only">切换导航</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/index1.html"><img style="margin-top:-10px" src="~/images/logo1.png"></a>
            </div>
            <div class="collapse navbar-collapse" id="example-navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/index1.html">首页</a></li>
                    <li><a href="/productFunction.html">产品功能</a></li>
                    <li><a href="/productApplication.html">产品应用</a></li>
                    <li class="active"><a href="/portal/productlist">产品动态</a></li>
                    <li><a href="/joinus.html">招贤纳士</a></li>
                    <li><a href="/address.html">联系我们</a></li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="banner">
        <div>
            <img class="img-responsive hidden-xs" src="/images/productTrends.png" />
            <img class="img-responsive visible-xs" src="/images/productTrends-phone.png" />
        </div>
        <div class="text text-center hidden-xs hidden-sm" style="position: absolute; margin-top: -16%;left: 0;right:0">
            <h1 class="mt1em" style="color:#fff;font-size:3em">产品动态</h1>
            <p style="color:#fff;font-size:1.5em;opacity: 0.7">让您们更好地了解我们在做什么……</p>
            <div class="btn-group mt1em" role="group" id="group">
                <div class="btn-group mt1em" role="group">
                    @Html.Action("catelist",new { id=Model.cateId})
                </div>
            </div>
        </div>
        <div class="text text-center visible-xs" style="position: absolute;left: 0;right:0;top:10%;">
            <h3>产品动态</h3>
            <p style="color:#fff;opacity: 0.7">让您们更好地了解我们在做什么……</p>
            <div class="btn-group mt1em" role="group" id="group1">
                @Html.Action("catelist", new { id = Model.cateId })
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row ">
            @foreach (var item in Model.NewsList)
            {
                <div class="visible-lg">
                    <div class="col-lg-6 col-md-4 col-sm-6  mt2em" style="height:110px;">
                        <div class="col-lg-4 col-md-12 col-sm-12">
                            <a href="/portal/detail/@item.Id"><img class="img-responsive" src="/upload/@item.Image.Src"></a>
                        </div>
                        <div class="col-lg-8 col-md-12 col-sm-12">
                            <h2><a href="/portal/detail/@item.Id" style="color:inherit;font-weight: 500;line-height: 1.3;">@item.Title</a></h2>
                            <p class="zxc mt1em">@item.Description</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4 col-sm-6 hidden-lg  mt2em">
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <a href="/portal/detail/@item.Id"><img class="img-responsive" src="/upload/@item.Image.Src"></a>
                    </div>
                    <div class="col-lg-8 col-md-12 col-sm-12">
                        <h2><a href="/portal/detail/@item.Id" style="color:inherit;font-weight: 500;line-height: 1.3;">@item.Title</a></h2>
                        <p class="zxc mt1em">@item.Description</p>
                    </div>
                </div>
            }
        </div>
        <div class="pagecontent hidden-xs" style="margin:0 auto;width:470px;">
            @Html.Pager(Model.NewsList, new PagerOptions() { AutoHide = true, MaxPageIndex = 5, ContainerTagName = "ul", CssClass = "pagination mypage", PagerItemWrapperFormatString = "<li>{0}</li>", CurrentPagerItemWrapperFormatString = "<li class='active'><a href='#'>{0}</a></li>", PageIndexParameterName = "PageIndex" })
        </div>
        <div class="pagecontent hidden-md hidden-sm hidden-lg" style="margin:0 auto;width:306px;padding-left:25px;">
            @Html.Pager(Model.NewsList, new PagerOptions() { AutoHide = true, ShowNumericPagerItems = false, MaxPageIndex = 1, ContainerTagName = "ul", CssClass = "pagination mypage", PagerItemWrapperFormatString = "<li>{0}</li>", CurrentPagerItemWrapperFormatString = "<li class='active'><a href='#'>{0}</a></li>", PageIndexParameterName = "PageIndex" })
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="footer mt2em">
        <div class="container">
            <div class="row">
                <ul class="bottomNav mt1em">
                    <li><a href="/productFunction.html">产品功能&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li><a href="/productApplication.html">产品应用&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li><a href="/portal/productlist">产品动态&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li><a href="/joinus.html">招贤纳士&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li><a href="/address.html">联系我们&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                    <li><a href="">微信公共账号</a></li>
                </ul>
            </div>
        </div>
        <div class="foot-detail text-center"><p>版权所有：北京朗迪锋科技有限公司京ICP备13044728<p></div>
    </div>

    <!-- build:js(.) scripts/vendor.js -->
    <!-- bower:js -->
    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/bootstrap-sass-official/assets/javascripts/bootstrap.js"></script>
    <script src="../../scripts/jquery.fitvids.js"></script>
    <!-- endbower -->
    <!-- endbuild -->

    <script type="text/javascript">

        $(document).ready(function () {

            //maxwidth 表示限制放多少个字

            $(".zxc").each(function () {
                var maxwidth = 55;
                if ($(this).text().length > maxwidth) {
                    $(this).text($(this).text().substring(0, maxwidth));
                    $(this).html($(this).html() + "…");
                }
            });
        });
    </script>
    <script>
        // Basic FitVids Test
        $(".container").fitVids();
        // Custom selector and No-Double-Wrapping Prevention Test
        $(".container").fitVids({
            customSelector: "iframe[src^='http://socialcam.com']"
        });
    </script>

    <!-- build:js({app,.tmp}) scripts/main.js -->
    <script src="/scripts/main.js"></script>
    <!-- endbuild -->

</body>
</html>
